{
  "cli": {
    "version": ">= 10.2.0"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "channel": "development"
    },
    "development-simulator": {
      "developmentClient": true,
      "distribution": "internal",
      "ios": {
        "simulator": true
      }
    },
    "preview": {
      "android": {
        "buildType": "apk",
        "image": "auto"
      },
      "ios": {
        "image": "auto"
      },
      "distribution": "internal",
      "channel": "preview"
    },
    "production": {
      "channel": "production",
      "distribution": "store",
      "cache": {
        "disabled": true
      },
      "android": {
        "buildType": "app-bundle",
        "image": "auto"
      },
      "ios": {
        "image": "auto"
      }
    }
  },
  "submit": {
    "production": {}
  }
}